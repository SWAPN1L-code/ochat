{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": false,

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./src",

    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": [".templates", "dist"]
}
