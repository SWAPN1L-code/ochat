{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": false,

    // ðŸ”¥ Important changes
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    // Fix external type errors
    "skipLibCheck": true,

    // Normal settings
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./src",

    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [".templates"]
}
